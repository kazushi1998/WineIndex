<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wineindex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WineIndex">
        <activity
            android:name=".ui.WineEdit"
            android:parentActivityName=".ui.VineyardInfo" />
        <activity android:name=".ui.WineInfo">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.VineyardInfo"></meta-data>
        </activity>
        <activity android:name=".ui.Settings" />
        <activity
            android:name=".ui.VineyardInfo"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.WineAdd"
            android:parentActivityName=".ui.VineyardInfo" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>